<% provide :title, t(".log_in") %>
<h1><%= t "app.sessions.new.log_in" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email, t("app.sessions.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("app.sessions.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me, class: "remember-me" %>
        <span><%= t "app.sessions.new.remember" %></span>
      <% end %>

      <%= f.submit t("app.sessions.new.log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "app.sessions.new.new?" %>
      <%= link_to t("app.sessions.new.sign_up"), signup_path %></p>
  </div>
</div>
