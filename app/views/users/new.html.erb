<% provide :title, t(".title") %>
<h1><%= t "app.users.new.header1" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages", user: @user %>

      <%= f.label :name, t("app.users.new.label_name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("app.users.new.label_email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("app.users.new.label_passwd") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("app.users.new.label_passwd_cf") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("app.users.new.label_submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
